<header>
  <h2>Question for <%= @question.show_month %>/<%= @question.show_day %>:</h2>
  <h2><%= @question.question %></h2>
</header>

<div class="question-list">

  <h3>Answers</h3>

  <% @question.answers.each do |answer| %>
    <div class="border-bottom"><%= answer.answer %> <%= answer.created_at.strftime("(%Y)") %></div>
  <% end %>

</div>

